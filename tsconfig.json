{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "importHelpers": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "*": ["./src/*"],
      "@/*": ["./src/*"]
    },
    "typeRoots": ["typings/**/*.d.ts", "node_modules/@types"],
  },
  "include": [
    "src",
    "webpack.config.js",
    "typings/**/*.d.ts",
    "./node_modules/@types"
  ],
  "exclude": [
    "node_modules",
    "**/*.js"
  ]
}
